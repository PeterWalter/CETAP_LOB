<UserControl x:Class="LOB.View.scoring.ScoreTabs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             BorderThickness="0,1,0,0"
             BorderBrush="{Binding SettingsAppearance.SelectedAccentColor, Source={StaticResource Locator}}">
  <Grid Style="{StaticResource ContentRoot}">
    <mui:ModernTab Layout="Tab">
      <mui:ModernTab.Links>
        <mui:Link DisplayName="AQL"/>
        <mui:Link DisplayName="Mat"/>
        <mui:Link DisplayName="Bio"/>
      </mui:ModernTab.Links>
    </mui:ModernTab>
  </Grid>
</UserControl>